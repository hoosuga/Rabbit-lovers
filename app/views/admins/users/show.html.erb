<div class="container pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5><%= @user.name %>のページ</h5>
    </div>
  </div>
  <div class="row pl-5 pt-3">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <span class="font-weight-bold" style="font-size: 20px;">登録情報</span>
      <span style="padding-left: 10px;">
      <%= link_to edit_admins_user_path(@user.id) do %>
        <i class="fas fa-edit" style="color: #666e7a;"></i>編集
      <% end %>
      </span>
    </div>
  </div>
  <div class="row pl-5 pr-5 clear-table vertical-table-user m-1">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 p-2 mb-2">
      <table border=1 frame="void" rules="none">
        <tbody>
          <tr>
            <td rowspan="5" class="top col-lg-2"><%= image_tag @user.get_profile_image %></td>
            <td class="col-lg-2 p-2">会員ID</td>
            <td class="col-lg-9 p-2 pl-4"><%= @user.id %></td>
          </tr>
          <tr>
            <td class="p-2">名前</td>
            <td class="p-2 pl-4"><%= @user.name %></td>
          </tr>
          <tr>
            <td class="p-2">メールアドレス</td>
            <td class="p-2 pl-4"><%= @user.email %></td>
          </tr>
          <tr>
            <td class="p-2">自己紹介</td>
            <td class="p-2 pl-4"><%= simple_format(@user.introduction) %></td>
          </tr>
          <tr>
            <td class="p-2">会員ステータス</td>
            <td class="p-2 pl-4">
              <% if @user.is_deleted == false %>
                <span class="font-weight-bold" style="color:#00AA00;">有効</span>
              <% else %>
                <span class="font-weight-bold"  style="color:#C0C0C0;">退会</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
