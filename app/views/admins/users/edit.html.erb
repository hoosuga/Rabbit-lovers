<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2">
        <span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;">
          <%= @user.name %>さんの会員情報編集
        </span>
      </div>
    </div>
  </div>
</div>
<div class="container pt-2">
    <div class="row pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>会員ID</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= @user.id %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>名前</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= @user.name %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>メールアドレス</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= @user.email %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>自己紹介</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= @user.introduction %>
      </div>
    </div>
    <%= form_with model: @user, url: admins_user_path, method: :patch do |f| %>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        会員ステータス
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :sale_status_false, "有効" %>
        <span style="padding-left: 30px;">
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :sale_status_true, "退会" %>
        </span>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.submit "更新する", class: "btn btn-success btn-sm rounded-pill p-1 pl-4 pr-4" %>
      </div>
    </div>
  <% end %>
</div>