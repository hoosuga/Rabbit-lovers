<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h5>管理者ログイン</h5>
    </div>
  </div>
</div>

<div class="container pt-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row pb-2 pl-5">
      <div class="col-md-3 col-lg-2">
        <label>メールアドレス</label>
      </div>
      <div class="col-md-9 col-lg-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" , size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-md-3 col-lg-2">
        <label>パスワード</label>
      </div>
      <div class="col-md-9 col-lg-10">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-md-3 col-lg-2"></div>
      <div class="col-md-9 col-lg-10 user-login-btn">
        <%= button_to "ログイン", admins_root_path, method: :get, class: "btn btn-primary btn-sm rounded-pill" %>
      </div>
    </div>
  <% end %>
</div>
<%#= render "admins/shared/links" %>
