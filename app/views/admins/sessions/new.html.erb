<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2"><span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px;text-decoration: underline; ">管理者ログイン</span></div>
    </div>
  </div>
</div>
<div class="container pt-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row pb-2 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>メールアドレス</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" , size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>パスワード</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= button_to "ログイン", admins_root_path, method: :get, class: "btn btn-info btn-sm rounded-pill" %>
      </div>
    </div>
  <% end %>
</div>
<%#= render "admins/shared/links" %>
