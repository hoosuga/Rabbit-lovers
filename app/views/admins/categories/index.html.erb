<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2"><span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;">カテゴリ一覧・追加</span></div>
    </div>
  </div>
</div>
<div class="container">
  <%= form_with model: @category, url: admins_categories_path, method: :post do |f| %>
  <div class="row pt-3 pl-5">
    <div class="col-sm-2 col-md-2 col-lg-2">
      <label>カテゴリ名</label>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3">
      <%= f.text_field :name, placeholder:"カテゴリ名", class: 'form-control' %>
    </div>
    <div class="col-sm-7 col-md-7 col-lg-7">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
<div class="container pt-5">
  <div class="row">
    <div class="col-sm-5 col-md-5 col-lg-5">
      <table class="table">
        <thead>
          <th colspan="2" style="text-align: center;">カテゴリ</th>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="col-sm-3 col-md-3 col-lg-3 pl-5">
                <%= category.name %>
              </td>
              <td class="col-sm-2 col-md-2 col-lg-2 pl-5">
                <%= link_to "　編集する　", edit_admins_category_path(category.id), class: 'btn btn-success' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center p-2">
    <%= paginate @categories %>
  </div>
</div>