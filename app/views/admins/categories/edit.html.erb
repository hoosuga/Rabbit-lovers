<div class="container pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5>カテゴリ編集</h5>
    </div>
  </div>
  <div class="row pl-5">
    <!--バリデーション設定-->
    <% if @category.errors.any? %>
      <div class = "alert m-0 pb-0">
      <%= @category.errors.count %>件のエラーが発生しました。
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%= form_with model: @category, url: admins_category_path, method: :patch do |f| %>
  <div class="row pt-3 pl-5 pr-5">
    <div class="col-sm-4 col-md-3 col-lg-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8 col-md-6 col-lg-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-sm-0 col-lg-6"></div>
  </div>
  <div class="row pt-3 pl-5 pr-5">
    <div class="col-sm-4 col-md-3 col-lg-2"></div>
    <div class="col-sm-8 col-md-9 col-lg-10 update-btn">
      <%= f.submit "更新する", class: "btn btn-secondary btn-sm rounded-pill p-1 pl-4 pr-4" %>
      <span style="padding-left: 30px;">
        <%= link_to admins_category_path, method: :delete, data: { confirm: '本当に削除しますか？' } do %>
          <i class="fas fa-trash-alt" style="color: #666e7a;"></i>削除
        <% end %>
      </span>
    </div>
  </div>
  <% end %>
</div>