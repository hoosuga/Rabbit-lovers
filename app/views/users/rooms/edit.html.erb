<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2">
        <span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;">
          <%= @room.title %>　ルームの編集
        </span>
      </div>
    </div>
  </div>
</div>
<div class="container pt-2">
  <div class="row">
    <div class="col-sm-1 col-md-1 col-lg-1 pt-2">
      <%= image_tag @room.user.get_profile_image %>
    </div>
    <div class="col-sm-11 col-md-11 col-lg-11">
      <%= localize @room.updated_at, format: :short %></br>
      <%= link_to user_path(@room.user.id) do %>
        <span style="text-decoration: underline;"><%= @room.user.name %></span>
      <% end %>さん
    </div>
  </div>
</div>
<div class="container pt-2">
  <%= form_with model: @room, url: room_path, method: :patch do |f| %>
    <div class="row pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>トークルーム名</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.text_field :title, class: 'form-control', size: "2" %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>カテゴリ</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
          <%= category.label do %>
            <span class="pr-4">
              <%= category.check_box %>
              <%= category.text %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2">
        <label>本文</label>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.text_area :body, class: 'form-control',size: "2x3" %>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= f.radio_button :status, Room.statuses.key(0) %>
        <%= f.label :status, Room.statuses_i18n[:open] %>
        <span style="padding-left: 30px;">
          <%= f.radio_button :status, Room.statuses.key(2) %>
          <%= f.label :status, Room.statuses_i18n[:close] %></span>
      </div>
    </div>
    <div class="row pt-3 pl-5">
      <div class="col-sm-2 col-md-2 col-lg-2"></div>
      <div class="col-sm-3 col-md-3 col-lg-3">
        <%= f.submit "更新する", class: "btn btn-success btn-sm rounded-pill p-1 pl-4 pr-4" %>
      </div>
      <div class="col-sm-3 col-md-3 col-lg-3">
        <%= link_to "削除する", room_path, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm rounded-pill p-1 pl-4 pr-4" %>
      </div>
    </div>
  <% end %>
</div>