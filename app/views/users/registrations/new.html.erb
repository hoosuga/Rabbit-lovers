<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2"><span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 19px; text-decoration: underline;">新規会員登録</span></div>
    </div>
  </div>
</div>
<div class="container pt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="row pb-2 pl-5">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <%= f.label :name, "名前" %>
      </div>
      <div class="col-sm-8 col-md-8 col-lg-8">
        <%= f.text_field :name, autofocus: true, autocomplete: "名前", placeholder: "名前", size: 34 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-8 col-md-8 col-lg-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" , size: 34 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <label>パスワード
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %></label>
      </div>
      <div class="col-sm-8 col-md-8 col-lg-8">
        <%= f.password_field :password, autofocus: true, autocomplete: "パスワード(6文字以上)", placeholder: "パスワード(6文字以上)", size: 34 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
      </div>
      <div class="col-sm-8 col-md-8 col-lg-8">
        <%= f.password_field :password_confirmation, autocomplete: "パスワード(確認用)", placeholder: "パスワード(確認用)" , size: 34 %>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-sm-4 col-md-4 col-lg-4"></div>
      <div class="col-sm-8 col-md-8 col-lg-8">
        <%= button_tag(type: "submit", class: "btn btn-success btn-sm rounded-pill", ) do %>新規登録<% end %>
      </div>
    </div>
  <% end %>
</div>

<%#= render "users/shared/links" %>
