<div class="container pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5>新規会員登録</h5>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="row pt-3 pb-2 pl-5">
      <div class="col-md-4 col-lg-3">
        <%= f.label :name %>
      </div>
      <div class="col-md-8 col-lg-9">
        <%= f.text_field :name, autofocus: true, autocomplete: "名前", placeholder: "名前", size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-md-4 col-lg-3">
        <%= f.label :email %>
      </div>
      <div class="col-md-8 col-lg-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" , size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-md-4 col-lg-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %>
      </div>
      <div class="col-md-8 col-lg-9">
        <%= f.password_field :password, autofocus: true, autocomplete: "パスワード(6文字以上)", placeholder: "パスワード(6文字以上)", size: 30 %>
      </div>
    </div>
    <div class="row pb-2 pl-5">
      <div class="col-md-4 col-lg-3">
        <%= f.label :password_confirmation %>
      </div>
      <div class="col-md-8 col-lg-9">
        <%= f.password_field :password_confirmation, autocomplete: "パスワード(確認用)", placeholder: "パスワード(確認用)" , size: 30 %>
      </div>
    </div>
    <div class="row pl-5 mt-2">
      <div class="col-md-4 col-lg-3"></div>
      <div class="col-md-8 col-lg-9 new-create-btn">
        <%= button_tag(type: "submit", class: "btn btn-success btn-sm rounded-pill", ) do %>新規登録<% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="container pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5>すでに登録済み or お試ししたい方</h5>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <p class="pl-5"><%= link_to "ログインページ", new_user_session_path, class: "befor-sign" %>　はこちらから！</p>
    </div>
  </div>
</div>