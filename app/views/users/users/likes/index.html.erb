<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2"><span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;"><%= @user.name %>のいいね一覧</span></div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <table class="table">
        <thead>
          <th colspan="4" style="text-align: center;">トークルーム</th>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td class="col-sm-2 col-md-2 col-lg-2 pl-5">
                <%= link_to user_path(room.user.id) do %>
                  <%= image_tag room.user.get_profile_image %>
                <% end %>
              </td>
              <td class="col-sm-3 col-md-3 col-lg-3">
                <%= room.categories.pluck(:name).join(" / ") %>
              </td>
              <td class="col-sm-5 col-md-5 col-lg-5">
                <%= link_to room_path(room.id) do %>
                  <%= room.title %>
                <% end %>
              </td>
              <td class="col-sm-2 col-md-2 col-lg-2">
                <%= localize room.updated_at, format: :short %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center p-2">
    <%= paginate @rooms %>
  </div>
</div>
