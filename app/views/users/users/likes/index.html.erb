<div class="container pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h5><%= @user.name %>のいいね一覧</h5>
    </div>
  </div>
  <div class="row vertical-table pt-3 m-1">
    <% @rooms.each do |room| %>
      <div class="col-sm-12 col-md-12 col-lg-12 p-2 mb-2 one-table">
        <table border=1 frame="void" rules="none">
          <tbody>
            <tr>
              <td class="col-lg-1 mb-2">
                <%= image_tag room.user.get_profile_image %>
              </td>
              <td class="col-lg-3 mb-1">
                <%= link_to user_path(room.user.id) do %>
                  <span style="text-decoration: underline;"><%= room.user.name %></span>
                <% end %>さん
              </td>
              <td class="col-lg-3 mb-1">
                <%= room.categories.pluck(:name).join(" / ") %>
              </td>
              <td class="col-lg-3 mb-1">
                <%= link_to room_path(room.id) do %>
                  <span style="text-decoration: underline;"><%= room.title %></span>
                <% end %>のルーム
              </td>
              <td class="col-lg-2">
                <%= localize room.updated_at, format: :short %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center p-2">
    <%= paginate @rooms %>
  </div>
</div>
