<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 ">
      <div class="d-flex justify-content-end">
        <%= form_tag({controller:"users", action:"index"}, method: :get) do %>
          <%= text_field_tag :search %>
          <%= submit_tag '検索' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2">
        <span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;">会員一覧</span>
      </div>
    </div>
  </div>
</div>

<div class="container pt-2">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <table class="table">
        <thead>
          <th></th>
          <th>名前</th>
          <th>自己紹介</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="col-sm-2 col-md-2 col-lg-2">
                <%= image_tag user.get_profile_image %>
              </td>
              <td class="col-sm-4 col-md-4 col-lg-4">
                <%= link_to user_path(user.id) do %>
                  <span style="text-decoration: underline;"><%= user.name %></span>
                <% end %>さん
              </td>
              <td class="col-sm-6 col-md-6 col-lg-6">
                <%= user.introduction %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center p-2">
    <%= paginate @users %>
  </div>
</div>
