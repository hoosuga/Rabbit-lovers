<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="d-flex justify-content-end">
        <%= form_tag({controller:"users", action:"index"}, method: :get) do %>
          <%= text_field_tag :search %>
          <%= submit_tag '検索' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container pt-4 pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5>会員一覧</h5>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="col-sm-2 col-md-2 col-lg-2">
                <%= image_tag user.get_profile_image %>
              </td>
              <td class="col-sm-4 col-md-4 col-lg-4">
                <%= link_to user_path(user.id) do %>
                  <span style="text-decoration: underline;"><%= user.name %></span>
                <% end %>さん
              </td>
              <td class="col-sm-6 col-md-6 col-lg-6">
                <%= user.introduction %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center p-2">
    <%= paginate @users %>
  </div>
</div>
