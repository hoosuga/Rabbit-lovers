<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="p-2">
        <span class="rounded-pill p-1 pl-4 pr-4" style="background-color:#afeeee; font-size: 17px; text-decoration: underline;">
          <%= @user.name %>のページ
        </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pl-5 pt-2">
    <div class="col-sm-2 col-md-2 col-lg-2">
      <p class="font-weight-bold" style="font-size: 20px;">登録情報</p>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9 pr-5">
      <% if @user == current_user %>
        <%= link_to "編集する", edit_user_path(@user.id), class: 'btn btn-secondary btn-sm rounded-pill p-1 pl-4 pr-4' %>
      <% end %>
    </div>
  </div>
  <div class="row pl-5 pt-1">
    <div class="col-sm-2 col-md-2 col-lg-2 pl-2">
      <div class="d-flex justify-content-center p-2">
        <%= image_tag @user.get_profile_image %>
      </div>
    </div>
    <div class="col-sm-10 col-md-10 col-lg-10">
      <table border="1">
        <tbody>
          <tr>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2">名前</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2"><%= @user.name %></td>
          </tr>
          <% if @user == current_user %>
          <tr>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2">メールアドレス</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2"><%= @user.email %></td>
          </tr>
          <% end %>
          <tr>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2">自己紹介</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row pl-5 pt-5">
    <div class="col-sm-3 col-md-3 col-lg-3">
      <p class="font-weight-bold" style="font-size: 20px;">トークルーム設立一覧</p>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9">
      <%= link_to "一覧を見る", user_rooms_path(user_id: @user) %>
      <span class="rounded-pill p-1 pl-5 pr-5" style="background-color:#FF9872;">
        一覧を見る
      </span>
    </div>
  </div>
</div>