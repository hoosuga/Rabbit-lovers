<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 p-0">
      <h5><%= @user.name %>のページ</h5>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pl-5 pt-3">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <span class="font-weight-bold" style="font-size: 20px;">登録情報</span>
      <span style="padding-left: 10px;">
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user.id) do %>
          <i class="fas fa-edit" style="color: #666e7a;"></i>編集
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row pl-5 pt-2 pr-5">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <table class="table-responsive-md" style="border:none; white-space: nowrap;">
        <tbody>
          <tr>
            <td rowspan="3" class="top col-sm-2 col-md-2 col-lg-2"><%= image_tag @user.get_profile_image %></td>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2 border-bottom">名前</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2 border-bottom"><%= @user.name %></td>
          </tr>
          <% if @user == current_user %>
          <tr>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2 border-bottom">メールアドレス</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2 border-bottom"><%= @user.email %></td>
          </tr>
          <% end %>
          <tr>
            <td class="col-sm-4 col-md-4 col-lg-4 p-2 border-bottom">自己紹介</td>
            <td class="col-sm-6 col-md-6 col-lg-6 p-2 border-bottom"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container pt-5">
  <div class="row pl-5 pr-5">
    <div class="col-12">
      <p class="font-weight-bold" style="font-size: 20px;">トークルーム設立一覧</p>
    </div>
    </div>
    <div class="row pl-5 pr-5">
    <div class="col-12">
      <p class="pl-5"><%= link_to "一覧を見る", user_rooms_path(user_id: @user), class: "befor-sign" %></p>
    </div>
  </div>
</div>
<div class="container pt-5 pb-5">
  <div class="row pl-5 pr-5">
    <div class="col-12">
      <p class="font-weight-bold" style="font-size: 20px;">いいね一覧</p>
    </div>
    </div>
    <div class="row pl-5 pr-5">
    <div class="col-12">
      <p class="pl-5"><%= link_to "一覧を見る", user_likes_path(user_id: @user), class: "befor-sign" %></p>
    </div>
  </div>
</div>